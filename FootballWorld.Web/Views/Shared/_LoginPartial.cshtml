@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "", controller = "Account" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Здравей, @User.Identity.GetUserName()<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Профил", "Details", "Users", new { Area = "", id = this.User.Identity.GetUserId() }, new { })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Промени парола", "Manage", "Account", new { Area = "" }, new { })</li>
                </ul>
            </li>

            <li><a href="javascript:document.getElementById('logoutForm').submit()">Изход</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", new { area = "", controller = "Account" }, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Вход", "Login", "Account", new { area = "", controller = "Account" }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
